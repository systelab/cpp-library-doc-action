  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "4.0.0"
  },
  "devDependencies": {
    "@types/node": "14.0.25",
    "@zeit/ncc": "0.22.3",
    "codelyzer": "5.2.2",
    "eslint": "6.8.0",
